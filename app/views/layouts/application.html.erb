<!DOCTYPE html>
<html>
<head>
  <title>Hashington</title>

  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>

  <% if is_logged_in? %>
	<%= @current_user.email %> | <%= link_to 'Logout', '/logout' %>
  <% else %>
	<%= link_to 'Login', '/login' %> | <%= link_to 'Register', '/register' %>
  <% end %>

<%= yield %>

</body>
</html>
