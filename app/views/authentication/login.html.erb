<h1>Login</h1>

<% if request.post? and @user.nil? %>
	<ul class="errors">
		<li>Wrong email address or password, man.</li>
	</ul>
<% end %>

<% form_tag('/login', :method => 'post') do %>
	<div class="email"><%= label_tag :username, "Email:" %> <%= email_field_tag :username %></div>
	<div class="password"><%= label_tag :password, "Password:" %> <%= password_field_tag :password %></div>
	
	<div class="buttons">
		<%= submit_tag 'Login' %> <%= link_to 'Register', '/register' %>
	</div>
<% end %>